-- Määritellään funktio, joka asettaa kaikki osat, jotka on nimetty seinäksi, läpinäkyviksi
local function enableXray()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            -- Tarkistetaan, että osa on seinä
            if part.Name == "Seinä" or part.Name == "Wall" then
                -- Muutetaan seinän läpinäkyvyyttä (materiaali ja läpinäkyvyys)
                part.Transparency = 0.5  -- Aseta läpinäkyvyys (0 = ei läpinäkyvä, 1 = täysin läpinäkyvä)
                part.CanCollide = false  -- Estää törmäyksen (jos haluat kävellä sen läpi, poista tämä rivi)
                part.Material = Enum.Material.SmoothPlastic  -- Voit valita myös muita materiaaleja
            end
        end
    end
end

-- Poistetaan X-ray
local function disableXray()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            if part.Name == "Seinä" or part.Name == "Wall" then
                -- Palautetaan alkuperäinen läpinäkyvyys ja materiaali
                part.Transparency = 0  -- Palautetaan läpinäkyvyys normaaliksi
                part.CanCollide = true  -- Palautetaan törmäys takaisin
                part.Material = Enum.Material.SmoothPlastic  -- Voit palauttaa alkuperäisen materiaalin
            end
        end
    end
end

-- Kutsutaan funktio
enableXray()

